{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",

    "strict": true,
    "isolatedModules": true,
    "noEmit": true,

    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
